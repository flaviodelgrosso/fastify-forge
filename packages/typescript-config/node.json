{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "erasableSyntaxOnly": true,
    "lib": [
      "ESNext"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rewriteRelativeImportExtensions": true,
    "sourceMap": true,
    "target": "ES2022",
    "verbatimModuleSyntax": true
  },
  "display": "Node",
  "extends": "./base.json"
}
