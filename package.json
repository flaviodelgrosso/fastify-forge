{
  "name": "fastify-forge",
  "version": "1.1.0",
  "author": "Flavio Del Grosso",
  "license": "MIT",
  "description": "Armored Template for Fastify Projects using TypeScript",
  "packageManager": "pnpm@10.2.0",
  "type": "module",
  "scripts": {
    "start": "pnpm build && cross-env NODE_ENV=production node build/server.js",
    "dev": "cross-env NODE_ENV=development node --watch src/server.ts | pino-pretty --colorize",
    "build": "rimraf build && tsup",
    "check": "pnpm biome check --write ./src/**/*.ts",
    "lint": "pnpm biome lint --write ./src/**/*.ts",
    "format": "pnpm biome format --write ./src/**/*.ts",
    "test": "c8 --100 node --test test/**/*.test.ts",
    "test:lcov": "c8 --100 --reporter=lcov node --test test/**/*.test.ts",
    "prepare": "husky",
    "pm2": "pm2 start process.yml && tail -f /dev/null",
    "release": "standard-version",
    "major": "pnpm run release --release-as major",
    "minor": "pnpm run release --release-as minor",
    "patch": "pnpm run release --release-as patch",
    "push-release": "git push --follow-tags origin master",
    "pull": "git rebase origin master -i",
    "clean": "rimraf node_modules build pnpm-lock.yaml"
  },
  "dependencies": {
    "@fastify/autoload": "^6.2.0",
    "@fastify/cors": "^11.0.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.2",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@fastify/under-pressure": "^9.0.3",
    "@scalar/fastify-api-reference": "^1.28.5",
    "@sinclair/typebox": "^0.34.29",
    "better-auth": "^1.2.4",
    "close-with-grace": "^2.2.0",
    "drizzle-orm": "^0.40.1",
    "env-schema": "^6.0.1",
    "fastify": "^5.2.1",
    "fastify-better-auth": "^1.0.1",
    "fastify-plugin": "^5.0.1",
    "pino": "^9.6.0",
    "pm2": "^6.0.5",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@types/lint-staged": "~13.3.0",
    "@types/node": "22.13.10",
    "@types/sinon": "^17.0.4",
    "c8": "^10.1.3",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.30.5",
    "husky": "9.1.7",
    "lint-staged": "15.4.3",
    "pino-pretty": "13.0.0",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "standard-version": "^9.5.0",
    "tsup": "^8.4.0",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=23.6.0",
    "pnpm": ">=10.2.0"
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,js,json}": "pnpm run check"
  }
}
