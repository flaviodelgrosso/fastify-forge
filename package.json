{
  "name": "fastify-forge",
  "version": "2.1.0",
  "author": "Flavio Del Grosso",
  "license": "MIT",
  "description": "Armored Template for Fastify Projects using TypeScript",
  "packageManager": "pnpm@10.2.0",
  "type": "module",
  "homepage": "https://github.com/flaviodelgrosso/fastify-forge#readme",
  "bin": {
    "fastify-forge": "cli/index.js"
  },
  "files": [
    "cli"
  ],
  "keywords": [
    "fastify",
    "typescript",
    "template",
    "api",
    "server"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flaviodelgrosso/fastify-forge.git"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "turbo start",
    "lint": "turbo lint --",
    "format": "prettier --write '**/*.{ts,js}'",
    "test": "turbo test",
    "clean": "turbo clean && rimraf node_modules .turbo pnpm-lock.yaml",
    "prepare": "node .husky/install.mjs",
    "syncpack:list": "npx syncpack list-mismatches",
    "syncpack:fix": "npx syncpack fix-mismatches"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "commander": "^14.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@workspace/typescript-config": "workspace:*",
    "dotenv-cli": "^10.0.0",
    "eslint": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "prettier-plugin-space-before-function-paren": "^0.0.9",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.6",
    "typescript": "catalog:"
  },
  "engines": {
    "node": ">=24",
    "pnpm": ">=10"
  }
}
